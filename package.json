{
  "name": "@janispritzkau/tailwindcss-material-symbols-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "tsx ./scripts/update-material-symbols.ts",
    "build": "pnpm run \"/^(build-only|type-check)$/\"",
    "build-only": "pnpm --filter ./packages/tailwindcss-material-symbols build",
    "type-check": "tsc --build",
    "format": "prettier --write **/src/**",
    "update:material-symbols": "tsx ./scripts/update-material-symbols.ts",
    "publish:package": "pnpm --filter ./packages/tailwindcss-material-symbols publish --provenance --access public --no-git-checks"
  },
  "devDependencies": {
    "@types/node": "^22.18.8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
